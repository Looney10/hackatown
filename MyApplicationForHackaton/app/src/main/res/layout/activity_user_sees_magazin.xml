<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#5680e9"
    tools:context="com.example.ada.myapplicationforhackaton.UserSeesMagazinActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAGAZIN"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/titlutv"
        android:paddingBottom="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriereet"
        android:paddingTop="20dp"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:text="Descriere............................"
        app:layout_constraintTop_toBottomOf="@+id/chatBtn"/>
    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittextAddComment"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnComment"
        android:text="Add"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/commlist"
        android:background="#c1c8e4"
        app:layout_constraintTop_toBottomOf="@+id/descriereet"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatBtn"
        android:text="CHAT"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/titlutv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>
