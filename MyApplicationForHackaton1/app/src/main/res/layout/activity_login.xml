<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1c8e4"
    tools:context="com.example.ada.myapplicationforhackaton.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User: "
        android:id="@+id/usertv"
        android:textColor="#8860d0"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@+id/useret"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parola: "
        android:textColor="#8860d0"
        android:textSize="20dp"
        android:id="@+id/parolatv"
        app:layout_constraintRight_toLeftOf="@+id/parolaet"
        app:layout_constraintTop_toBottomOf="@+id/usertv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/parolaet"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/useret"
        app:layout_constraintLeft_toRightOf="@+id/usertv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/parolaet"
        android:inputType="textPassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/parolatv"
        app:layout_constraintTop_toBottomOf="@+id/useret"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/signupbtn"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/parolaet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/loginbtn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Log in"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:id="@+id/loginbtn"
        app:layout_constraintLeft_toRightOf="@+id/signupbtn"
        app:layout_constraintTop_toBottomOf="@id/parolaet"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/useret"
        android:src="@drawable/logo"
        />
</android.support.constraint.ConstraintLayout>
